<main id="login">
    <div class="breadcrumbs d-flex align-items-center" style="background-image: url('assets/img/calltoaction.png');">
        <div class="container position-relative d-flex flex-column align-items-center">
  
          <h2>Login</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>Login</li>
          </ol>
  
        </div>
      </div><!-- End Breadcrumbs -->
  
    <section class="login">
        <div class="container d-flex justify-content-center mt-4"  style="padding-top: 5rem;">
            <div class="card mt-4 text-center">
                <div class="card-header" style="width: 18rem;"><br>
                    <p class="fs-4">Login</p>
                </div>
                <div class="card-body">
                    <form method="POST" action="/login">
                        <input class="form-control" name="email" type="email" placeholder="email@exemplo.com">
                        <br>
                        <input class="form-control" name="password" type="password" placeholder="Senha">
                        <br>
                        <a type="submit" class="btn-get-started">Login</a>
                    </form>
        
                </div>
            </div>
        </div>
    </section>
</main>

